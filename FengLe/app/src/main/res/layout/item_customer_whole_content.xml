<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@color/red_btn_bg_color"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvCompany"
            style="@style/wholeTitleTxtStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="国际洗衣企业管理有限公司" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/customer_whole_margin_top"
        android:text="重要客户"
        android:textSize="@dimen/customer_whole_text_normal"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/customer_whole_margin_top"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最后跟进时间"
            android:textSize="@dimen/customer_whole_text_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/customer_whole_margin_left"
            android:text="2017年02月18日00:40:02"
            android:textSize="@dimen/customer_whole_text_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/customer_whole_margin_top"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="负责人"
            android:textSize="@dimen/customer_whole_text_normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/customer_whole_margin_left"
            android:text="哇哈哈"
            android:textSize="@dimen/customer_whole_text_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/customer_whole_margin_top"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="成交状态"
            android:textSize="@dimen/customer_whole_text_normal" />

        <TextView
            android:id="@+id/tvChengj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/customer_whole_margin_left"
            android:text="未成交"
            android:textColor="@color/move_attend_light_green"
            android:textSize="@dimen/customer_whole_text_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/customer_whole_margin_top_larger"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发货金额"
                android:textSize="@dimen/customer_whole_text_normal" />

            <TextView
                android:id="@+id/tvFahuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/customer_whole_margin_left"
                android:text="0"
                android:textSize="@dimen/customer_whole_text_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/customer_whole_text_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退货金额"
                android:textSize="@dimen/customer_whole_text_normal" />

            <TextView
                android:id="@+id/tvTuihuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/customer_whole_margin_left"
                android:text="0"
                android:textSize="@dimen/customer_whole_text_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/customer_whole_text_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回款金额"
                android:textSize="@dimen/customer_whole_text_normal" />

            <TextView
                android:id="@+id/tvHuikuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/customer_whole_margin_left"
                android:text="0"
                android:textSize="@dimen/customer_whole_text_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textSize="@dimen/customer_whole_text_normal" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
