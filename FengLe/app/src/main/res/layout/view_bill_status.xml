<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llayout_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@drawable/layout_bg4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单据状态："
            android:textSize="@dimen/comom_txt_size_xs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已完成"
            android:textSize="@dimen/comom_txt_size_xs" />

        <TextView
            android:id="@+id/txt_preview"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="15dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="查看"
            android:textColor="@color/white"
            android:textSize="@dimen/comom_txt_size_s" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="单据备注："
            android:textSize="@dimen/comom_txt_size_xs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textSize="@dimen/comom_txt_size_xs" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_code_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="生成发货单号："
            android:textSize="@dimen/comom_txt_size_xs"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345465676"
            android:textSize="@dimen/comom_txt_size_xs" />
    </LinearLayout>
</LinearLayout>